@model IEnumerable<Makeup.Models.MakeupArtist>
@{
    ViewData["Title"] = "Artists Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layoutadmin.cshtml";
}

<main role="main">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="row align-items-center my-4">
                    <div class="col">
                        <h2 class="h3 mb-0 page-title">Artists Management</h2>
                    </div>
                    <div class="col-auto">
                        <div class="dropdown d-inline mr-2">
                            <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fe fe-filter fe-12 mr-2"></i>Filter Artists
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item @(ViewBag.Status == null ? "active" : "")" asp-action="Index" asp-controller="Artists" asp-area="Admin">All Artists</a>
                                <a class="dropdown-item @(ViewBag.Status == "active" ? "active" : "")" asp-action="Index" asp-controller="Artists" asp-area="Admin" asp-route-status="active">Active Artists</a>
                                <a class="dropdown-item @(ViewBag.Status == "inactive" ? "active" : "")" asp-action="Index" asp-controller="Artists" asp-area="Admin" asp-route-status="inactive">Inactive Artists</a>
                            </div>
                        </div>
                        
                    </div>
                </div>

                @if (TempData["StatusMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fe fe-check-circle fe-16 mr-2"></i> @TempData["StatusMessage"]
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }

                <!-- Statistics Cards -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="card shadow mb-4">
                            <div class="card-body text-center">
                                <div class="avatar avatar-lg mt-4">
                                    <a href="#">
                                        <i class="fe fe-check-circle fe-24 text-success"></i>
                                    </a>
                                </div>
                                <div class="card-text my-2">
                                    <strong class="card-title my-0">Active Artists</strong>
                                    <p class="small text-muted mb-0">@Model.Count(a => a.IsActive == 1) artists</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card shadow mb-4">
                            <div class="card-body text-center">
                                <div class="avatar avatar-lg mt-4">
                                    <a href="#">
                                        <i class="fe fe-x-circle fe-24 text-danger"></i>
                                    </a>
                                </div>
                                <div class="card-text my-2">
                                    <strong class="card-title my-0">Inactive Artists</strong>
                                    <p class="small text-muted mb-0">@Model.Count(a => a.IsActive == 0) artists</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card shadow mb-4">
                            <div class="card-body text-center">
                                <div class="avatar avatar-lg mt-4">
                                    <a href="#">
                                        <i class="fe fe-users fe-24 text-primary"></i>
                                    </a>
                                </div>
                                <div class="card-text my-2">
                                    <strong class="card-title my-0">Total Artists</strong>
                                    <p class="small text-muted mb-0">@Model.Count() artists</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Filter tabs -->
                <div class="card shadow mb-4">
                    <div class="card-header">
                        <strong class="card-title">Artists List</strong>
                        @if (ViewBag.Status != null)
                        {
                            <span class="badge badge-pill badge-info ml-2">
                                Filtering: @(ViewBag.Status == "active" ? "Active" : "Inactive")
                            </span>
                        }
                    </div>
                    <div class="card-body">
                        <!-- Search Box -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <form method="get" action="@Url.Action("Index", "Artists", new { area = "Admin" })">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Search artists..." name="searchTerm" value="@ViewBag.SearchTerm">
                                        <div class="input-group-append">
                                            <button class="btn btn-primary" type="submit">
                                                <i class="fe fe-search fe-16"></i>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-6 text-right">
                                @{
                                    var startItem = (ViewBag.CurrentPage - 1) * 10 + 1;
                                    var endItem = Math.Min(ViewBag.CurrentPage * 10, ViewBag.TotalItems);
                                }
                                <span class="text-muted">Showing @startItem - @endItem of @ViewBag.TotalItems artists</span>
                            </div>
                        </div>

                        @if (!Model.Any())
                        {
                            <div class="text-center py-5">
                                <div class="mb-3">
                                    <i class="fe fe-users fe-24 text-muted"></i>
                                </div>
                                <h3 class="h5 mb-4">No artists found</h3>
                                <p class="text-muted">There are no artists matching your criteria</p>
                            </div>
                        }
                        else
                        {
                            <!-- Artists Table -->
                            <div class="table-responsive">
                                <table class="table border table-hover bg-white">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input" id="all">
                                                    <label class="custom-control-label" for="all"></label>
                                                </div>
                                            </th>
                                            <th>Artist</th>
                                            <th>Contact Information</th>
                                            <th>Experience</th>
                                            <th>Rating</th>
                                            <th>Status</th>
                                            <th>Created At</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var artist in Model)
                                        {
                                            string statusClass = artist.IsActive == 1 ? "badge-success" : "badge-danger";
                                            string statusText = artist.IsActive == 1 ? "Active" : "Inactive";

                                            <tr>
                                                <td>
                                                    <div class="custom-control custom-checkbox">
                                                        <input type="checkbox" class="custom-control-input" id="check-@artist.ArtistId">
                                                        <label class="custom-control-label" for="check-@artist.ArtistId"></label>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        @if (artist.User != null && !string.IsNullOrEmpty(artist.User.Avatar))
                                                        {
                                                            <img src="@artist.User.Avatar" alt="@artist.FullName" class="avatar rounded-circle mr-2" style="width: 40px; height: 40px; object-fit: cover;" />
                                                        }
                                                        else
                                                        {
                                                            <div class="avatar avatar-md mr-2 bg-primary">
                                                                <span class="avatar-initial rounded-circle">@(artist.FullName != null ? artist.FullName.Substring(0, 1).ToUpper() : "A")</span>
                                                            </div>
                                                        }
                                                        <div>
                                                            <p class="mb-0">@artist.FullName</p>
                                                            <small class="text-muted">@(artist.Specialty ?? "General Makeup Artist")</small>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <p class="mb-0">@artist.User?.Email</p>
                                                    <small class="text-muted">@artist.User?.PhoneNumber</small>
                                                </td>
                                                <td>@(artist.Experience ?? 0) years</td>
                                                <td>
                                                    @if (artist.Rating.HasValue)
                                                    {
                                                        <div class="rating-stars">
                                                            @for (int i = 1; i <= 5; i++)
                                                            {
                                                                if (i <= artist.Rating)
                                                                {
                                                                    <i class="fe fe-star text-warning"></i>
                                                                }
                                                                else
                                                                {
                                                                    <i class="fe fe-star text-muted"></i>
                                                                }
                                                            }
                                                            <small class="text-muted ml-1">(@artist.Rating)</small>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">Not rated</span>
                                                    }
                                                </td>
                                                <td><span class="badge @statusClass">@statusText</span></td>
                                                <td>@artist.User?.CreatedAt?.ToString("dd/MM/yyyy")</td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        @if (artist.IsActive == 1)
                                                        {
                                                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="toggleArtistStatus(@artist.ArtistId, false)" title="Deactivate">
                                                                <i class="fe fe-pause-circle"></i>
                                                            </button>
                                                        }
                                                        else
                                                        {
                                                            <button type="button" class="btn btn-sm btn-outline-success" onclick="toggleArtistStatus(@artist.ArtistId, true)" title="Activate">
                                                                <i class="fe fe-play-circle"></i>
                                                            </button>
                                                        }
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>

                <!-- Pagination -->
                @if (ViewBag.TotalPages > 1)
                {
                    <div class="row mt-3">
                        <div class="col-sm-12 col-md-5">
                            <div class="dataTables_info" role="status" aria-live="polite">
                                Showing @((ViewBag.CurrentPage - 1) * ViewBag.PageSize + 1) to 
                                @(Math.Min(ViewBag.CurrentPage * ViewBag.PageSize, ViewBag.TotalItems)) 
                                of @ViewBag.TotalItems entries
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-7">
                            <nav aria-label="Page navigation" class="float-right">
                                <ul class="pagination pagination-sm mb-0">
                                    <!-- Previous -->
                                    <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                                        <a class="page-link" href="@Url.Action("Index", "Artists", new { area = "Admin", page = ViewBag.CurrentPage - 1, searchTerm = ViewBag.SearchTerm, status = ViewBag.Status })" 
                                           aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>

                                    @{
                                        var startPage = Math.Max(1, ViewBag.CurrentPage - 2);
                                        var endPage = Math.Min(ViewBag.TotalPages, startPage + 4);
                                        startPage = Math.Max(1, endPage - 4);

                                        // First page
                                        if (startPage > 1)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="@Url.Action("Index", "Artists", new { area = "Admin", page = 1, searchTerm = ViewBag.SearchTerm, status = ViewBag.Status })">1</a>
                                            </li>
                                            if (startPage > 2)
                                            {
                                                <li class="page-item disabled"><span class="page-link">...</span></li>
                                            }
                                        }

                                        // Page numbers
                                        for (var i = startPage; i <= endPage; i++)
                                        {
                                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                                <a class="page-link" href="@Url.Action("Index", "Artists", new { area = "Admin", page = i, searchTerm = ViewBag.SearchTerm, status = ViewBag.Status })">@i</a>
                                            </li>
                                        }

                                        // Last page
                                        if (endPage < ViewBag.TotalPages)
                                        {
                                            if (endPage < ViewBag.TotalPages - 1)
                                            {
                                                <li class="page-item disabled"><span class="page-link">...</span></li>
                                            }
                                            <li class="page-item">
                                                <a class="page-link" href="@Url.Action("Index", "Artists", new { area = "Admin", page = ViewBag.TotalPages, searchTerm = ViewBag.SearchTerm, status = ViewBag.Status })">@ViewBag.TotalPages</a>
                                            </li>
                                        }
                                    }

                                    <!-- Next -->
                                    <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                                        <a class="page-link" href="@Url.Action("Index", "Artists", new { area = "Admin", page = ViewBag.CurrentPage + 1, searchTerm = ViewBag.SearchTerm, status = ViewBag.Status })" 
                                           aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Modal for artist status toggle confirmation -->
    <div class="modal fade" id="statusToggleModal" tabindex="-1" role="dialog" aria-labelledby="statusToggleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="statusToggleModalLabel">Confirm Status Change</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="statusToggleMessage">
                    Are you sure you want to change the status of this artist?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="confirmStatusBtn">Confirm</button>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script>
        var artistIdToToggle = 0;
        var activateArtist = false;

        function toggleArtistStatus(artistId, activate) {
            artistIdToToggle = artistId;
            activateArtist = activate;
            
            if (activate) {
                $('#statusToggleModalLabel').text('Activate Artist');
                $('#statusToggleMessage').text('Are you sure you want to activate this artist?');
                $('#confirmStatusBtn').removeClass('btn-danger').addClass('btn-success');
            } else {
                $('#statusToggleModalLabel').text('Deactivate Artist');
                $('#statusToggleMessage').text('Are you sure you want to deactivate this artist?');
                $('#confirmStatusBtn').removeClass('btn-success').addClass('btn-danger');
            }
            
            $('#statusToggleModal').modal('show');
        }

        $(document).ready(function () {
            $('#confirmStatusBtn').click(function () {
                if (artistIdToToggle > 0) {
                    window.location.href = '@Url.Action("ToggleStatus", "Artists", new { area = "Admin" })/' + artistIdToToggle;
                }
            });
        });
    </script>
} 